{
  "compilerOptions": {
		"target": "ES5",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "CommonJS",  
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
  },
}